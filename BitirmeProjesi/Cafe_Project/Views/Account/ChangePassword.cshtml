@model Cafe_Project.Models.ChangePasswordModel
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div id="sidebar" class="span3">
        <div class="well well-small">
            <ul class="nav nav-list" style="width:400px">
                @Html.Action("_CategoryList", "Category")@*PartialView kullanılırken önce action ismi, daha sonra controller ismi yazılır*@
            </ul>
        </div>


        @Html.Action("_FeaturedCafeList", "Home")

    </div>
    <div class="span9">
        <ul class="breadcrumb">
            <li><a href="/Home/Index">Anasayfa</a> <span class="divider">/</span></li>
            <li class="active">Şifre Değiştir</li>
        </ul>
        <hr class="soft" />
        <div class="well">
            @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
            {

                <h3>Şifrenizi Değiştirebilirsiniz</h3>
                @Html.AntiForgeryToken()
                
                <div class="control-group">
                    <label class="control-label" for="inputFname">Eski Şifre</label>
                    <div class="controls">
                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control", @style = "max-width:35%" } })
                            @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputFname">Yeni Şifre</label>
                    <div class="controls">
                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control", @style = "max-widht:35%, min-widht:35% " } })
                            @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputFname">Şifre tekrar</label>
                    <div class="controls">
                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.ConNewPassword, new { htmlAttributes = new { @class = "form-control", @style = "max-widht:35%, min-widht:35% " } })
                            @Html.ValidationMessageFor(model => model.ConNewPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
               

                <div class="control-group">
                    <div class="controls">
                        <input type="submit" name="submitAccount" value="Şifre Değiştir" class="exclusive shopBtn">
                    </div>
                </div>
            }
        </div>

    </div>
</div>
